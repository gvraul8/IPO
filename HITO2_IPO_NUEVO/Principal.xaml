<Window x:Class="HITO2_IPO_NUEVO.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HITO2_IPO_NUEVO"
        mc:Ignorable="d"
        Title="Principal" Height="800" Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl HorizontalAlignment="Center" Height="784" VerticalAlignment="Center" Width="1300">
            <TabItem Header="Rutas" FontSize="20">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="102*"/>
                        <ColumnDefinition Width="384*"/>
                        <ColumnDefinition Width="64*"/>
                        <ColumnDefinition Width="641*"/>
                        <ColumnDefinition Width="102*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="600*"/>
                        <RowDefinition Height="50*"/>


                    </Grid.RowDefinitions>
                    <ListBox x:Name="ListBoxRutas" HorizontalAlignment="Center"  Height="506" Margin="0,105,0,0" VerticalAlignment="Top" Width="365" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1" Grid.Row="1" SelectionChanged="PrintText" SelectionMode="Single"/>
                    <GroupBox x:Name="gb_rutas" Grid.Column="3" HorizontalAlignment="Center" Height="506"  Margin="0,105,0,0" Grid.Row="1" VerticalAlignment="Top" Width="621">

                        <Grid x:Name="date">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="250*"/>
                                <ColumnDefinition Width="280*"/>
                                <ColumnDefinition Width="250*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                            </Grid.RowDefinitions>

                            <Label x:Name="lb_nombre" HorizontalAlignment="Center" Height="43" VerticalAlignment="Top" Width="358" Content="Nombre de la ruta" Grid.ColumnSpan="3" Grid.Column="1" Margin="0,10,0,0" Grid.RowSpan="2" FontWeight="Bold" FontSize="24"/>
                            <Label x:Name="lb_origen" Grid.Column="1" Content="Origen" HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="157" Grid.Row="1"/>
                            <Label x:Name="lb_destino" Grid.Column="1" Content="Destino" HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="157" Grid.Row="2"/>
                            <Label x:Name="lb_provincia" Grid.Column="1" Content="Provincia" HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="157" Grid.Row="3"/>
                            <Label x:Name="lb_fecha" Grid.Column="1" Content="Fecha y hora" HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="157" Grid.Row="4"/>
                            <Label x:Name="lb_dificultad" Grid.Column="1" Content="Dificultad" HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="157" Grid.Row="5"/>
                            <Label x:Name="lb_plazas" Grid.Column="1" Content="Plazas vacantes" HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="157" Grid.Row="6"/>
                            <Label x:Name="lb_material" Content="Material necesario" HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="175" Grid.Row="7" RenderTransformOrigin="0.28,0.577" Grid.Column="1"/>
                            <Label x:Name="lb_realizaciones" Grid.Column="1" Content="Realizada por " HorizontalAlignment="Left" Height="43" VerticalAlignment="Center" Width="157" Grid.Row="8"/>
                            <TextBox x:Name="tb_origen" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>
                            <TextBox x:Name="tb_destino" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="2" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>
                            <TextBox x:Name="tb_provincia" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="3" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>
                            <TextBox x:Name="tb_fecha" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="4"   VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>
                            <TextBox x:Name="tb_dificultad" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="5" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>
                            <TextBox x:Name="tb_plazas" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="6" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>
                            <TextBox x:Name="tb_material" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="7" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>
                            <TextBox x:Name="tb_realizaciones" Grid.Column="2" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="8" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" Width="152" IsReadOnly="True"/>

                            <Image x:Name="img_ruta" Margin="2,10,0,0" VerticalAlignment="Top" Grid.Column="3" Grid.RowSpan="3" Grid.Row="1" />
                            <Image x:Name="img_interesRuta" Height="145" Margin="193,19,5,0" VerticalAlignment="Top" Grid.Column="2" Grid.RowSpan="4" Grid.Row="4" Grid.ColumnSpan="2" />

                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Guías" FontSize="20">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="155*"/>
                        <ColumnDefinition Width="492*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
        <DockPanel LastChildFill="False"/>
        <Button Height="42" Margin="564,107,596,0" VerticalAlignment="Top" FontSize="15" Background="#FF423F3F" Foreground="White" Width="140" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagenes/add.png" Width="18" />
                <TextBlock Margin="10,0,5,0" VerticalAlignment="Center" FontSize="20" Width="78"><Run Text="Añadir"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Height="42" Margin="940,107,156,0" VerticalAlignment="Top" FontSize="15" Background="#FF423F3F" Foreground="White" Width="140" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagenes/add.png" Width="18" />
                <TextBlock Margin="10,0,5,0" VerticalAlignment="Center" FontSize="20" Width="78"><Run Text="Eliminar"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Height="42" Margin="770,107,390,0" VerticalAlignment="Top" FontSize="15" Background="#FF423F3F" Foreground="White" Width="140" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagenes/edit.png" Width="18" />
                <TextBlock Margin="10,0,5,0" VerticalAlignment="Center" FontSize="20" Width="78"><Run Text="Editar"/></TextBlock>
            </StackPanel>
        </Button>

    </Grid>
</Window>
